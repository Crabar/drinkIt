<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <!-- Used by the JpaTemplate example
    <persistence-unit name="mycocktails" transaction-type="RESOURCE_LOCAL" >
		<class>mycocktails.auth.model.UserInfo</class>        
        <exclude-unlisted-classes/>
    </persistence-unit>
 	-->
    <persistence-unit name="mycocktails">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>mycocktails.auth.entity.UserProfile</class>
        
        <exclude-unlisted-classes/>
        
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.cache.provider_class" value="org.hibernate.cache.HashtableCacheProvider" />
        </properties>
    </persistence-unit>

    
    
</persistence>