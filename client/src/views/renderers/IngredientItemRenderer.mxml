<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx"
				autoDrawBackground="false" height="24" minWidth="24" buttonMode="true">


	
	<fx:Style source="/design/newStyle.css" />
	<fx:Script>
		<![CDATA[

			import design.DesignModel;
			
			import flash.filters.BitmapFilterQuality;
			
			import models.supportClasses.Ingredient;
			
			import spark.components.List;
			
			private const cornerRadius:uint = 5;
			private var ingredientData:Ingredient;
			
			override public function set data(value:Object):void
			{
				super.data = value;
				
				if (data)
				{
					ingredientData = Ingredient(data);
					labelDisplay.text = label;
					labelDisplay.validateSize();
					width = labelDisplay.getExplicitOrMeasuredWidth() + 30;
				}
			}
			
			protected function itemrenderer1_clickHandler(event:MouseEvent):void
			{
				var parentList:List = owner as List;
				parentList.dataProvider.removeItemAt(parentList.dataProvider.getItemIndex(data))
			}

			protected function group1_rollOverHandler(event:MouseEvent):void
			{
				closeButtonColor.color = DesignModel.LIGHT_PINK;
			}
			
			protected function group1_rollOutHandler(event:MouseEvent):void
			{
				closeButtonColor.color = DesignModel.ORANGE_BEACH;
			}
			
		]]>
	</fx:Script>

	<s:Rect width="100%" height="100%" bottomLeftRadiusX="{cornerRadius}" bottomLeftRadiusY="{cornerRadius}" bottomRightRadiusX="{cornerRadius}"
			bottomRightRadiusY="{cornerRadius}" topLeftRadiusX="{cornerRadius}" topLeftRadiusY="{cornerRadius}" topRightRadiusX="{cornerRadius}"
			topRightRadiusY="{cornerRadius}">
		<s:fill>
			<s:SolidColor color="{DesignModel.ORANGE_BEACH}" />
		</s:fill>
	</s:Rect>
	<s:HGroup paddingLeft="5" height="100%" verticalAlign="middle">
		<s:Label height="100%" horizontalCenter="0" verticalAlign="middle" id="labelDisplay" mouseEnabled="true" styleName="regularText"/>
		<s:Group click="itemrenderer1_clickHandler(event)" rollOver="group1_rollOverHandler(event)" rollOut="group1_rollOutHandler(event)">
			<s:Ellipse width="16" height="16">
				<s:fill>
					<s:SolidColor id="closeButtonColor" color="{DesignModel.ORANGE_BEACH}" />
				</s:fill>
			</s:Ellipse>
			<s:Line horizontalCenter="0" verticalCenter="0" yFrom="0" yTo="10" width="8" height="8">
				<s:stroke>
					<s:SolidColorStroke color="0xffffff" weight="2" />
				</s:stroke>
			</s:Line>
			<s:Line horizontalCenter="0" verticalCenter="0" yFrom="10" yTo="0" width="8" height="8">
				<s:stroke>
					<s:SolidColorStroke color="0xffffff" weight="2" />
				</s:stroke>
			</s:Line>
		</s:Group>
	</s:HGroup>
</s:ItemRenderer>
