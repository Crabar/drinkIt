<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true" height="30">
	
	<fx:Script>
		<![CDATA[
			import models.IngredientsModel;
			
			override public function set data(value:Object):void
			{
				super.data = value;
				
				if (data)
				{
					ingrName.text = IngredientsModel.instance.getIngredientNameById(data.id);
					ingrQuantity.text = data.quantity + " мл";
				}
			}
			
		]]>
	</fx:Script>
	
	<s:Label id="ingrName" left="5" height="100%" verticalAlign="middle" />
	<s:Label id="ingrQuantity" right="5" height="100%" verticalAlign="middle" />
</s:ItemRenderer>
