<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:components="components.*" add="group1_addHandler(event)">
	<s:layout>
		<s:HorizontalLayout gap="5" paddingBottom="5" paddingLeft="5" paddingRight="5" paddingTop="5" />
	</s:layout>
	
	<fx:Script>
		<![CDATA[
			import controllers.CocktailController;
			import controllers.MainController;
			
			import models.CocktailModel;
			import models.MainModel;
			
			import mx.events.FlexEvent;
			
			import spark.components.NavigatorContent;

			private var _model:CocktailModel;
			private var _controller:CocktailController;
			
			protected function group1_showHandler(event:FlexEvent):void
			{
				_model = new CocktailModel();
				_controller = new CocktailController(_model);
				trace("open cocktail = " + MainController.instance.viewData);
			}
			
			protected function group1_addHandler(event:FlexEvent):void
			{
				NavigatorContent(owner).addEventListener(FlexEvent.SHOW, group1_showHandler);
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>

	<s:BitmapImage width="384" height="512" />
	<s:VGroup width="100%">
		<s:Label width="100%" text="Название коктейля" fontSize="18" textAlign="center" />
		<s:TextArea text="Описание коктейля" width="100%" height="100%" editable="false" />
	</s:VGroup>
	<s:VGroup width="300" height="100%">
		<components:GroupBox title="Ингридиенты" width="100%" height="300">
			<s:Label text="test" />	
		</components:GroupBox>
		<s:TileGroup id="tagsContainer">
		</s:TileGroup>
	</s:VGroup>
</s:Group>
